    "version": "2.0.0",
    "tasks": [
        {
            "label": "client-build",
            "command": "npm run build && cp -TR ./src/main/webapp/resources/theme1/js/ ./target/ReceiptOrganizer-1.0.2-SNAPSHOT/Resources/theme1/js",
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": []
        },
        {
            "label": "client-build-prod",
            "command": "npm run build-prod && cp -TR ./src/main/webapp/resources/theme1/js/ ./target/ReceiptOrganizer-1.0.2-SNAPSHOT/Resources/theme1/js",
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": []
        },
        {
            "label": "full-build",
            "command": "TASKKILL //F //IM node.exe; mvn clean install -P dev -Dmaven.test.skip=true",
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": []
        },
        {
            "label": "full-build-prod",
            "command": "TASKKILL //F //IM node.exe; mvn clean install -P prod -Dmaven.test.skip=true",
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": []
        },
        {
            "label": "test",
            "command": "TASKKILL //F //IM node.exe; mvn clean test -P local-test,dev",
            "isShellCommand": true,
            "showOutput": "always"
        },
        {
            "label": "deploy-build client only",
            "command": "cp -TR target/ReceiptOrganizer-1.0.2-SNAPSHOT ../../jboss-eap-7.0/standalone/deployments/ReceiptOrganizer-1.0.2-SNAPSHOT.war && rm ../../jboss-eap-7.0/standalone/deployments/*.deployed && touch ../../jboss-eap-7.0/standalone/deployments/ReceiptOrganizer-1.0.2-SNAPSHOT.war.dodeploy",
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": [],
            "dependsOn": [
                "client-build"
            ]
        },
        {
            "label": "deploy-build-prod client only",
            "command": "cp -TR target/ReceiptOrganizer-1.0.2-SNAPSHOT ../../jboss-eap-7.0/standalone/deployments/ReceiptOrganizer-1.0.2-SNAPSHOT.war && rm ../../jboss-eap-7.0/standalone/deployments/*.deployed && touch ../../jboss-eap-7.0/standalone/deployments/ReceiptOrganizer-1.0.2-SNAPSHOT.war.dodeploy",
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": [],
            "dependsOn": [
                "client-build-prod"
            ]
        },
        {
            "label": "deploy-build full",
            "command": "rm -rf ../../jboss-eap-7.0/standalone/deployments/*.deployed && cp -TR target/ReceiptOrganizer-1.0.2-SNAPSHOT ../../jboss-eap-7.0/standalone/deployments/ReceiptOrganizer-1.0.2-SNAPSHOT.war && touch ../../jboss-eap-7.0/standalone/deployments/ReceiptOrganizer-1.0.2-SNAPSHOT.war.dodeploy",
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": [],
            "dependsOn": [
                "full-build"
            ]
        },
        {
            "label": "deploy-build-prod full",
            "command": "rm -rf ../../jboss-eap-7.0/standalone/deployments/*.deployed && cp -TR target/ReceiptOrganizer-1.0.2-SNAPSHOT ../../jboss-eap-7.0/standalone/deployments/ReceiptOrganizer-1.0.2-SNAPSHOT.war && touch ../../jboss-eap-7.0/standalone/deployments/ReceiptOrganizer-1.0.2-SNAPSHOT.war.dodeploy",
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": [],
            "dependsOn": [
                "full-build-prod"
            ]
        },
        {
            "label": "run debug",
            "command": "sh ~/Documents/Github/ReceiptOrganizer/run_debug.sh",
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": []
        }
    ]
}