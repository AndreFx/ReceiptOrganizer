<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ReceiptOrganizer</display-name>
  <servlet>
    <servlet-name>ReceiptOrganizer</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReceiptOrganizer</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>com.afx.web.receiptorganizer.authentication.ReceiptOrganizerFilter</filter-class>
    <init-param>
      <param-name>login-page</param-name>
      <param-value>/ReceiptOrganizer/</param-value>
    </init-param>
    <init-param>
      <param-name>login-action</param-name>
      <param-value>/ReceiptOrganizer/login/authenticate</param-value>
    </init-param>
    <init-param>
      <param-name>resources</param-name>
      <param-value>/resources/</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>