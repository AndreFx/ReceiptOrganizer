{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "parser": "babel-eslint",
    "rules": {
        "semi": 2,
        "react/no-find-dom-node": "off"
    },
    "plugins": [
        "prettier"
    ],
    "env": {
        "browser": true
    },
    "settings": {
        "react": {
            "createClass": "createReactClass",
            "pragma": "React",
            "version": "16.6"
        },
        "propWrapperFunctions": [
            "forbidExtraProps"
        ]
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "prettier/react"
    ]
}